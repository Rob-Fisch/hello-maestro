{
  "expo": {
    "name": "OpusMode",
    "slug": "opusmode",
    "version": "1.3.1",
    "orientation": "portrait",
    "icon": "./assets/images/icon.png",
    "scheme": "opusmode",
    "userInterfaceStyle": "automatic",
    "newArchEnabled": true,
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.anonymous.opusmode"
    },
    "android": {
      "adaptiveIcon": {
        "backgroundColor": "#fdfbf7",
        "foregroundImage": "./assets/images/android-icon-foreground.png",
        "backgroundImage": "./assets/images/android-icon-background.png",
        "monochromeImage": "./assets/images/android-icon-monochrome.png"
      },
      "edgeToEdgeEnabled": true,
      "predictiveBackGestureEnabled": false,
      "package": "com.anonymous.opusmode"
    },
    "web": {
      "output": "single",
      "favicon": "./assets/images/favicon.png",
      "pwa": {
        "enabled": true,
        "display": "standalone",
        "orientation": "portrait",
        "icon": "./assets/images/icon.png",
        "themeColor": "#2563eb",
        "backgroundColor": "#fdfbf7",
        "name": "OpusMode",
        "shortName": "OpusMode",
        "description": "Premium practice and rehearsal management for musicians."
      }
    },
    "plugins": [
      "expo-router",
      [
        "expo-image-picker",
        {
          "photosPermission": "The app accesses your photos to let you select sheet music snippets.",
          "cameraPermission": "The app accesses your camera to let you capture sheet music snippets."
        }
      ],
      [
        "expo-splash-screen",
        {
          "image": "./assets/images/icon.png",
          "imageWidth": 200,
          "resizeMode": "contain",
          "backgroundColor": "#fdfbf7",
          "dark": {
            "backgroundColor": "#000000"
          }
        }
      ],
      "@react-native-community/datetimepicker"
    ],
    "experiments": {
      "typedRoutes": true,
      "reactCompiler": false
    },
    "extra": {
      "router": {},
      "buildNumber": "63"
    }
  }
}
